@import '../bower_components/bootstrap-stylus/bootstrap/index.styl'

html, body
  height 100%

/* Site */
body
  background-color $gray-dark

/* Header */
.header
  padding 30px 0px
/* User */
.user
  text-align center

  h1, p
    font-weight 400

  h1
    font-size 15px
    color white
    margin-bottom 0px

  p
    font-size 13px
    color $gray
    margin-top 3px
    margin-bottom 20px


/* Components */
.navbar
  background transparent
  border none


.bg
  height 100%
  width 100%
  background-color $gray-dark
  background-image url('../images/bg.jpg')
  background-size cover
  position fixed
  z-index -500
  opacity 0.1
